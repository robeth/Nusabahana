<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <com.nusabahana.view.NoteImage
        android:id="@+id/gong0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:src="@drawable/gong" />

    <com.nusabahana.view.NoteImage
        android:id="@+id/gong1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/gong0"
        android:adjustViewBounds="true"
        android:maxHeight="35dp"
        android:maxWidth="35dp"
        android:src="@drawable/gong" />

    <com.nusabahana.view.NoteImage
        android:id="@+id/gong2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/gong1"
        android:adjustViewBounds="true"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:src="@drawable/gong" />

    <com.nusabahana.view.NoteImage
        android:id="@+id/gong3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@id/gong2"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:maxHeight="45dp"
        android:maxWidth="45dp"
        android:src="@drawable/gong" />

    <com.nusabahana.view.NoteImage
        android:id="@+id/gong4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gong3"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/gong" />
    
    <com.nusabahana.view.NoteImage
        android:id="@+id/gong5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gong4"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:maxHeight="55dp"
        android:maxWidth="55dp"
        android:src="@drawable/gong" />
    
    <com.nusabahana.view.NoteImage
        android:id="@+id/gong6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gong3"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:src="@drawable/gong" />

    <com.nusabahana.view.NoteImage
        android:id="@+id/gong7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gong3"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/gong6"
        android:adjustViewBounds="true"
        android:maxHeight="75dp"
        android:maxWidth="75dp"
        android:src="@drawable/gong" />

    <com.nusabahana.view.NoteImage
        android:id="@+id/gong8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gong3"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/gong7"
        android:adjustViewBounds="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:src="@drawable/gong" />

    <TextView
        android:id="@+id/gong_text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong0"
        android:layout_alignRight="@id/gong0"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="0" />

    <TextView
        android:id="@+id/gong_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong1"
        android:layout_alignRight="@id/gong1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="1" />

    <TextView
        android:id="@+id/gong_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong2"
        android:layout_alignRight="@id/gong2"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="2" />

    <TextView
        android:id="@+id/gong_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong3"
        android:layout_alignRight="@id/gong3"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="3" />

    <TextView
        android:id="@+id/gong_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong4"
        android:layout_alignRight="@id/gong4"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="4" />

    <TextView
        android:id="@+id/gong_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong5"
        android:layout_alignRight="@id/gong5"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="5" />

    <TextView
        android:id="@+id/gong_text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong6"
        android:layout_alignRight="@id/gong6"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="6" />
    
     <TextView
        android:id="@+id/gong_text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong7"
        android:layout_alignRight="@id/gong7"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="7" />
     
      <TextView
        android:id="@+id/gong_text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gong8"
        android:layout_alignRight="@id/gong8"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/toast_frame"
        android:gravity="center_horizontal"
        android:text="8" />

</RelativeLayout>